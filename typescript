import { SolanaAgentKit, createSolanaTools } from "solana-agent-kit";
import { HumanMessage } from "@langchain/core/messages";
import * as dotenv from "dotenv";

dotenv.config();

async function initializeSatiAgent() {
  // Inicjalizacja zestawu narzędzi agenta SATI
  const agent = new SolanaAgentKit(
    process.env.SOLANA_PRIVATE_KEY!,
    process.env.RPC_URL!,
    process.env.OPENAI_API_KEY!
  );

  console.log("SATI Agent zintegrowany z Solana Agent Kit.");
  console.log("Adres portfela Agenta:", agent.wallet_address.toBase58());

  // Przykładowa autonomiczna akcja: sprawdzenie stanu systemu reputacji SATI
  const response = await agent.get_balance();
  console.log(`Agent SATI gotowy. Stan portfela: ${response} SOL`);
}

initializeSatiAgent().catch(console.error);
